---
const foodImages = [
  "/public/Gallary1.jpg",
  "/public/Gallary2.jpg",
  "/public/Gallary3.jpg", 
  "/public/Gallary4.jpg",
  "/public/Gallary5.jpg",
  "/public/Gallary6.jpg"
];
---

<section class="foodGallary container mx-auto px-4 py-16">
  <div class="text-center mb-12">
    <h2 class="text-4xl font-bold mb-4">Foods <span class="text-red-600">Gallery</span></h2>
    <div class="h-1 w-24 bg-red-600 mx-auto"></div>
  </div>

  <div class="flex overflow-x-auto snap-x snap-mandatory no-scrollbar">
    {foodImages.map(image => (
      <div class="flex-none w-80 h-64 snap-start mr-4">
        <img 
          src={image} 
          alt="Food"
          class="w-full h-full object-cover rounded-lg"
        />
      </div>
    ))}
  </div>
</section>

<style>
  .no-scrollbar {
    -ms-overflow-style: none;
    scrollbar-width: none;
  }
  .no-scrollbar::-webkit-scrollbar {
    display: none;
  }
</style>