---

<section class="foodList bg-gray-100 min-h-screen p-4 md:p-8 lg:px-24 flex flex-col gap-8">
  <!-- Header Section -->
  <div class="flex flex-col gap-5 text-center max-w-3xl mx-auto">
    <h1 class="text-3xl md:text-4xl lg:text-5xl font-bold text-wrap">
      Our Popular Tasty <span class="text-red-600">Foods</span>
    </h1>
    <p class="text-center text-sm md:text-base px-4 ">
      Lorem ipsum dolor sit amet consectetur adipisicing elit. Iusto dolorum culpa placeat debitis corrupti magni quibusdam deserunt, esse eveniet, enim dolor.
    </p>
  </div>

  <div class="w-full flex flex-col gap-8">
    <!-- Navigation Menu -->
    <div class="w-full overflow-x-auto">
      <ul class="flex justify-evenly items-center min-w-max md:w-4/5 lg:w-3/5 mx-auto px-10 py-2 gap-4">
        <li>
          <a href="#" class="bg-yellow-500 text-white border-2 border-yellow-300 rounded-full px-4 py-2 whitespace-nowrap">All Food</a>
        </li>
        <li>
          <a href="#" class="border-2 border-gray-200 rounded-full px-4 py-2 whitespace-nowrap hover:bg-gray-700 hover:text-white  transition-colors">Burger</a>
        </li>
        <li>
          <a href="#" class=" border-2 border-gray-200 rounded-full px-4 py-2 whitespace-nowrap hover:bg-gray-700 hover:text-white transition-colors">Pizza</a>
        </li>
        <li>
          <a href="#" class="border-2 border-gray-200 rounded-full px-4 py-2 whitespace-nowrap hover:bg-gray-700 hover:text-white transition-colors">Pasta</a>
        </li>
        <li>
          <a href="#" class="border-2 border-gray-200 rounded-full px-4 py-2 whitespace-nowrap hover:bg-gray-700 hover:text-white transition-colors">Fries</a>
        </li>
        <li>
          <a href="#" class="border-2 border-gray-200 rounded-full px-4 py-2 whitespace-nowrap hover:bg-gray-700 hover:text-white transition-colors">Drinks</a>
        </li>
      </ul>
    </div>

    <!-- Product Cards Container -->
    <div class="flex flex-col items-center gap-8">
      <!-- Initial Products Grid -->
      <div id="productsContainer" class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 w-full">
        {foodItems.slice(0, 8).map((item) => (
          <div class="bg-white rounded-xl p-4 shadow-lg w-full transition-transform hover:scale-105">
            <div class="relative aspect-video">
              <img 
                src={item.imageSrc} 
                alt={item.title} 
                class="w-full h-full object-contain rounded-lg"
              />
              <button class="absolute top-2 right-2 text-gray-400 hover:text-red-500 transition-colors">
                <i class="fa-regular fa-heart text-xl"></i>
              </button>
            </div>

            <div class="space-y-2 mt-4">
              <div class="flex gap-1">
                {[...Array(5)].map((_, index) => (
                  <i class={`fa-solid fa-star text-sm ${
                    index < item.rating ? 'text-yellow-400' : 'text-gray-200'
                  }`}></i>
                ))}
              </div>

              <h3 class="font-bold text-lg text-gray-800">{item.title}</h3>
              <p class="text-sm text-gray-500">{item.discount}</p>

              <div class="flex items-center justify-between pt-2">
                <span class="text-red-600 font-bold text-lg">${item.price.toFixed(2)}</span>
                <button class="flex items-center gap-2 bg-black text-white px-4 py-2 rounded-full hover:bg-gray-800 transition-colors">
                  <i class="fa-solid fa-cart-arrow-down"></i>
                  <span class="text-sm">Add to Cart</span>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- Hidden Products (will be shown after clicking View All) -->
      <div id="hiddenProducts" class="hidden grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6 w-full">
        {foodItems.slice(8).map((item) => (
          <div class="bg-white rounded-xl p-4 shadow-lg w-full transition-transform hover:scale-105">
            <div class="relative aspect-video">
              <img 
                src={item.imageSrc} 
                alt={item.title} 
                class="w-full h-full object-contain rounded-lg"
              />
              <button class="absolute top-2 right-2 text-gray-400 hover:text-red-500 transition-colors">
                <i class="fa-regular fa-heart text-xl"></i>
              </button>
            </div>

            <div class="space-y-2 mt-4">
              <div class="flex gap-1">
                {[...Array(5)].map((_, index) => (
                  <i class={`fa-solid fa-star text-sm ${
                    index < item.rating ? 'text-yellow-400' : 'text-gray-200'
                  }`}></i>
                ))}
              </div>

              <h3 class="font-bold text-lg text-gray-800">{item.title}</h3>
              <p class="text-sm text-gray-500">{item.discount}</p>

              <div class="flex items-center justify-between pt-2">
                <span class="text-red-600 font-bold text-lg">${item.price.toFixed(2)}</span>
                <button class="flex items-center gap-2 bg-black text-white px-4 py-2 rounded-full hover:bg-gray-800 transition-colors">
                  <i class="fa-solid fa-cart-arrow-down"></i>
                  <span class="text-sm">Add to Cart</span>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>

      <!-- View All Products Button -->
      {foodItems.length > 8 && (
        <button
          id="viewAllButton"
          class="bg-yellow-500 text-white px-8 py-3 rounded-full font-semibold hover:bg-yellow-600 transition-colors shadow-lg mb-8"
        >
          View All Products
        </button>
      )}
    </div>
  </div>
</section>

<script>
  const viewAllButton = document.getElementById('viewAllButton');
  const hiddenProducts = document.getElementById('hiddenProducts');

  if (viewAllButton && hiddenProducts) {
    viewAllButton.addEventListener('click', () => {
      hiddenProducts.classList.toggle('hidden');
      viewAllButton.textContent = hiddenProducts.classList.contains('hidden') 
        ? 'View All Products' 
        : 'Show Less';
    });
  }
</script>