    imageSrc: "/public/burger2.png",
    rating: 4,
    discount: "Get a 20% Discount On First Order"
  },
  {
    title: "French Fry",
    price: 12.90,
    imageSrc: "/public/Fries.png",
    rating: 5,
    discount: "Get a 20% Discount On First Order"
  },
  {
    title: "Pasta",
    price: 10.90,
    imageSrc: "/public/pasta.png",
    rating: 4,
    discount: "Get a 20% Discount On First Order"
  },
  {
    title: "Sandwiche",
    price: 12.90,
    imageSrc: "/public/sandwiche.png",
    rating: 5,
    discount: "Get a 20% Discount On First Order"
  },
  {
    title: "Pizza",
    price: 10.90,
    imageSrc: "/public/Pizza.png",
    rating: 4,
    discount: "Get a 20% Discount On First Order"
  },
  {
    title: "Cold Drinks",
    price: 12.90,
    imageSrc: "/public/cold-drink.png",
    rating: 5,
    discount: "Get a 20% Discount On First Order"
  },
  {
    title: "Combo",
    price: 10.90,
    imageSrc: "/public/Combo.png",
    rating: 4,
    discount: "Get a 20% Discount On First Order"
  },
  {
    title: "Combo 2",
    price: 12.90,
    imageSrc: "/public/Combo.png",
    rating: 5,
    discount: "Get a 20% Discount On First Order"
  },
  // Additional items that will be shown after clicking "View All"
  {
    title: "Special Pizza",
    price: 15.90,
    imageSrc: "/public/Pizza.png",
    rating: 5,
    discount: "Get a 20% Discount On First Order"
  },
