<section class="contactSection bg-gray-100 py-16">
  <div class="container mx-auto px-4">
    <!-- Newsletter Subscription -->
    <div class="bg-white rounded-lg shadow-md p-6 mb-16 flex flex-wrap items-center justify-between">
      <div class="flex items-center mb-4 md:mb-0">
        <h3 class="text-2xl font-bold mr-4">Subscription News</h3>
        <p class="text-gray-600">Subscribe to the weekly newsletter.</p>
      </div>
      <div class="flex w-full md:w-auto">
        <input 
          type="email" 
          placeholder="Enter Email Address" 
          class="flex-grow px-4 py-2 border border-gray-300 rounded-l-lg focus:outline-none focus:border-red-500"
        />
        <button class="bg-black text-white px-6 py-2 rounded-r-lg hover:bg-gray-800">
          Subscribe
        </button>
      </div>
    </div>

    <!-- Footer Grid -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      <!-- About Column -->
      <div>
        <p class="text-gray-600 mb-6">
          Senectus amet lobortis metus convallis etiam dignissim parturient tincidunt. Neque enim in cursus eu.
        </p>
        <div class="mb-6">
          <h4 class="font-bold text-xl mb-2">Book A Table</h4>
          <p class="text-red-600 font-bold">+1-555-157-5651</p>
        </div>
        <div>
          <h4 class="font-bold text-xl mb-2">Opening Hours</h4>
          <p class="text-red-600 font-bold">08:00 AM - 12:00 PM</p>
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h4 class="font-bold text-xl mb-4">Quick Links</h4>
        <ul class="space-y-2">
          <li><a href="#" class="text-gray-600 hover:text-red-600">About Us</a></li>
          <li><a href="#" class="text-gray-600 hover:text-red-600">Menu</a></li>
          <li><a href="#" class="text-gray-600 hover:text-red-600">Testimonial</a></li>
          <li><a href="#" class="text-gray-600 hover:text-red-600">Blog</a></li>
          <li><a href="#" class="text-gray-600 hover:text-red-600">Contact Us</a></li>
        </ul>
      </div>

      <!-- Our Menu -->
      <div>
        <h4 class="font-bold text-xl mb-4">Our Menu</h4>
        <ul class="space-y-2">
          <li><a href="#" class="text-gray-600 hover:text-red-600">Burgers</a></li>
          <li><a href="#" class="text-gray-600 hover:text-red-600">Desserts</a></li>
          <li><a href="#" class="text-gray-600 hover:text-red-600">Pizza</a></li>
          <li><a href="#" class="text-gray-600 hover:text-red-600">Pasta</a></li>
          <li><a href="#" class="text-gray-600 hover:text-red-600">Cold Drinks</a></li>
        </ul>
      </div>

      <!-- Get In Touch -->
      <div>
        <h4 class="font-bold text-xl mb-4">Get In Touch</h4>
        <ul class="space-y-4">
          <li class="flex items-start space-x-3">
            <i class="fa-solid fa-location-dot text-red-600 mt-1"></i>
            <span class="text-gray-600">3847 Hummingbird Way Quincy, MA 02169</span>
          </li>
          <li class="flex items-center space-x-3">
            <i class="fa-solid fa-phone-volume text-red-600"></i>
            <span class="text-gray-600">+1-555-157-5651</span>
          </li>
          <li class="flex items-center space-x-3">
            <i class="fa-solid fa-envelope text-red-600"></i>
            <span class="text-gray-600">tastyfoods@gmail.com</span>
          </li>
        </ul>
