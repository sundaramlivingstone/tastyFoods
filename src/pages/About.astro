---
import { Image } from 'astro:assets';
import Layout from "../layouts/Layout.astro";

const metrics = [
  { number: "3 Billion+", label: "orders delivered" },
  { number: "220k+", label: "restaurant partners" },
  { number: "520k+", label: "delivery partners" },
  { number: "680+", label: "cities in India" }
];

const values = [
  { title: "Mission", content: "To elevate the quality of life for the urban consumer with unparalleled convenience" },
  { title: "Vision", content: "To be the most trusted and convenient food delivery platform" },
  { title: "Values", content: "Customer First, Innovation, Excellence in Service" }
];

const journeyMilestones = [
  { year: 2023, event: "Expanded to 680+ cities" },
  { year: 2022, event: "Launched premium dining experiences" },
  { year: 2021, event: "Reached 3 billion+ deliveries" }
];

const services = [
  { name: "Food", icon: "üçî" },
  { name: "Instamart", icon: "üõí" },
  { name: "Dineout", icon: "üç∑" }
];
---

<Layout>

  <div class="bg-white">
    <!-- Hero Section -->
    <section class="relative bg-orange-500">
      <div class="container mx-auto px-4 py-16 md:py-24">
        <h1 class="text-4xl md:text-5xl font-bold text-center mb-6">About Us</h1>
        <p class="text-gray-600 text-center max-w-3xl mx-auto text-lg">
          We are a new-age consumer-first organization offering an easy-to-use convenience platform, accessible through a unified app.
        </p>
      </div>
    </section>

    <!-- Metrics Section -->
    <section class="py-12 border-y border-gray-100">
      <div class="container mx-auto px-4">
        <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
          {metrics.map(metric => (
            <div class="text-center">
              <h3 class="text-3xl md:text-4xl font-bold text-emerald-600 mb-2">{metric.number}</h3>
              <p class="text-gray-600">{metric.label}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Get to Know Us</h2>
        <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
          {values.map(value => (
            <div class="bg-white p-6 rounded-lg shadow-md">
              <h3 class="text-xl font-semibold mb-4">{value.title}</h3>
              <p class="text-gray-600">{value.content}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Journey Section -->
    <section class="py-16">
      <div class="container mx-auto px-4">
        <h2 class="text-3xl font-bold text-center mb-12">Our Journey</h2>
        <div class="max-w-4xl mx-auto">
          <div class="space-y-8">
            {journeyMilestones.map(milestone => (
              <div class="flex items-center gap-8">
                <div class="text-2xl font-bold text-emerald-600 w-24">{milestone.year}</div>
                <div class="flex-1 p-4 bg-gray-50 rounded-lg">{milestone.event}</div>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Services Section -->
    <section class="py-16 bg-gray-50">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-12">Our Services</h2>
          <div class="grid grid-cols-3 gap-8">
            {services.map(service => (
              <div class="flex flex-col items-center">
                <div class="text-4xl mb-4">{service.icon}</div>
                <h3 class="text-xl font-semibold">{service.name}</h3>
              </div>
            ))}
          </div>
        </div>
      </div>
    </section>

    <!-- Contact Section -->
    <section class="py-16 bg-slate-500 text-white">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h2 class="text-3xl font-bold mb-8">Get in Touch</h2>
          <div class="grid md:grid-cols-2 gap-8">
            <div class="bg-gray-800 p-6 rounded-lg">
              <h3 class="text-xl font-semibold mb-4">Customer Support</h3>
              <p>24/7 support available</p>
              <a href="tel:1800-000-000" class="text-emerald-400 mt-4 block">1800-000-000</a>
            </div>
            <div class="bg-gray-800 p-6 rounded-lg">
              <h3 class="text-xl font-semibold mb-4">Business Inquiries</h3>
              <p>Partner with us</p>
              <a href="mailto:partner@example.com" class="text-emerald-400 mt-4 block">partner@example.com</a>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
</Layout>

<!-- -------------------------------- Style -------------------------------- -->

<style>
  .container {
    max-width: 1280px;
  }
</style>